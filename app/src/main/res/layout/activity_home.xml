<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Tanggal dan waktu -->
    <TextView
        android:id="@+id/dateTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Kamis, 05/09/2024 07:30"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp" />

    <!-- Tombol Absensi -->
    <ImageButton
        android:id="@+id/attendanceButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:contentDescription="Absensi"
        android:src="@drawable/ic_touch"
        android:layout_marginBottom="24dp"
        android:background="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Menggunakan LinearLayout horizontal untuk tombol-tombol -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Tombol History -->
            <ImageView
                android:id="@+id/historyIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="History Icon"
                android:src="@drawable/ic_history" />

            <!-- Tombol Home (berat ditambahkan untuk menempatkan di tengah) -->
            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="Home Icon"
                android:src="@drawable/ic_home" />

            <!-- Tombol Profil -->
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Profile Icon"
                android:src="@drawable/ic_profile" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
